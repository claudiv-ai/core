{
  "name": "@claudiv/core",
  "version": "0.1.0",
  "description": "Claudiv core generation engine - Pure, framework-agnostic CDML parser and code generator",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "htmlparser2": "^9.1.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "claudiv",
    "cdml",
    "code-generation",
    "parser",
    "universal",
    "declarative"
  ],
  "author": "Amir Guterman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/claudiv-ai/core.git"
  },
  "bugs": {
    "url": "https://github.com/claudiv-ai/core/issues"
  },
  "homepage": "https://claudiv.org",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
